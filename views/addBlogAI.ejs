<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Add New Blog</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>

    <div clsss="container mt-4">
        <form action="/blog/AI" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="coverImage" class="form-label">Cover Image</label>
                <input type="file" class="form-control" name="coverImage" id="coverImage" aria-describedby="coverImage">

            </div>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="title" id="title" aria-describedby="title">

            </div>

            <div class="mb-3">
                <label for="body" class="form-label">Write your experience in brief</label>
                <textarea class="form-control" name="body" id="body"></textarea>
            </div>

            <div class="mb-3">
                <label for="caution" class="form-label">Any caution or special observation related to any specific place/location</label>
                <textarea class="form-control" name="caution" id="caution"></textarea>
            </div>

            
            <div class="mb-3">
                <button class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <%- include('./partials/script.ejs') %>
</body>
</html>